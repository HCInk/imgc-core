FROM debian:latest

WORKDIR /app

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -yq \
    gcc \
    g++ \
    cmake \
    make \
    nlohmann-json3-dev \
	libcurl4-openssl-dev \
	git

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -yq \
	libavcodec-dev \
	libavformat-dev \
	libavutil-dev \
	libswscale-dev \
	libsdl2-dev \
	libsdl2-ttf-dev